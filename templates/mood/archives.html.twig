{% extends "base.html.twig" %}

{% block body %}
    {% include "nav/_nav.html.twig" %}
    
    <div class="archives">
         <nav id="archives-nav">
            <div class="form"><i class="fas fa-search"></i><p>Rechercher</p></div>
            <div class="month" id="january"><p>Janvier</p></div>
            <div class="month" id="february"><p>Février</p></div>
            <div class="month" id="march"><p>Mars</p></div>
            <div class="month" id="april"><p>Avril</p></div>
            <div class="month" id="may"><p>Mai</p></div>
            <div class="month" id="june"><p>Juin</p></div>
            <div class="month" id="july"><p>Juillet</p></div>
            <div class="month" id="august"><p>Août</p></div>
            <div class="month" id="september"><p>Septembre</p></div>
            <div class="month" id="october"><p>Octobre</p></div>
            <div class="month" id="november"><p>Novembre</p></div>
            <div class="month" id="december"><p>Décembre</p></div>
            <i class="fas fa-times" id="close-menu"></i>
        </nav>

        <i id="open-menu" class="fas fa-bars"></i>

        <div id="chart">
            <canvas id="myChart"></canvas>
        </div>


        <div class="mood-search">

            {% include "mood/_form.html.twig" %}

            {% if mood is defined %}
                {% for mood in mood %}
                    <div class="mood-search-result">
                        <h3>Résultat de la recherche : </h3>
                        <p> <span>Date : </span><br> {{mood.date|date('d m Y')}}</p> 
                        <p> <span>Feeling : </span><br> {{mood.feeling}}</p> 
                        <p> <span>Gratitude : </span><br> {{mood.gratitude}}</p> 
                        <p> <span>Note : </span><br> {{mood.note}}</p> 
                    </div>
                {% endfor %}
            {% elseif error is defined %}
                    <div class="mood-search-result">
                        <p> {{error}} </p>
                    </div>
            {% endif %}
            
        </div>
    </div>
   
    
{% endblock %}


{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('mood') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('mood') }}
    {{ encore_entry_script_tags('chart') }}
{% endblock %}